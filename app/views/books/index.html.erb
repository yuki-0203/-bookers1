<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
    <tr>
     <% @books.each do |books| %>
      <tr>
        <td><%= books.title %></td>
        <td><%= books.body %></td>
         <td><%= link_to 'Show', book_path(books.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(books.id) %></td>
        <td><%= link_to 'Destroy', books, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{@book}" %></td>
      </tr>
    <% end %>
    </tr>
  </tbody>
</table>

<%= render 'form' %>
